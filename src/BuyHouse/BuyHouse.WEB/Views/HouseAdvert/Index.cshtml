@model IEnumerable<BuyHouse.WEB.Models.AdvertModel.HouseAdvertModel>
@*Test View*@
<div class="container">
@foreach(var item in Model){
	<div class="row mt-5" style="border: 3px solid green; padding: 10px;">
		<div class="col-md-7">
			<p>Регіон: @item.MainInfo.Region</p>
			<p>Місто: @item.MainInfo.City</p>
			<p>Житлова площа: @item.LivingArea</p><hr>
			<p>Ціна: @item.Price @item.Currency</p>
			<hr>
			<p>User Name: some name</p>
			<p>User email: some email</p>
			<p>User phone: some phone</p>
			<a asp-action="GetHouseAdvert" asp-controller="HouseAdvert" asp-route-houseAdvertId="@item.Id">Details</a>
			<a asp-action="DeleteHouseAdvert" asp-controller="HouseAdvert" asp-route-houseAdvertId="@item.Id">Delete</a>
		</div>
		<div class="col-md-5">
				@foreach(var photo in item.Photos)
				{
					<img src="@photo.Path" width="100" height="100">
				}			
		</div>
	</div>
	<br /><hr />
}
</div>
