@model BuyHouse.WEB.Models.ViewModels.GetHouseAdvertViewModel
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
<link rel="stylesheet" href="~/css/GetAdvert.css" />
<div class="container pt-3 pb-3">
	<div class="row">
		<div class="col-lg-8">
			<div id="carouselExampleFade" class="carousel slide carousel-fade slider_block" data-bs-ride="carousel">
				<div class="carousel-inner">
					@foreach (var photo in Model.HouseAdvert.Photos)
					{
						<div class="carousel-item active">
							<img src="@photo.Path" class="d-block slider_img">
						</div>
					}
				</div>
				<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Previous</span>
				</button>
				<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="visually-hidden">Next</span>
				</button>
			</div>
		</div>
		<div class="col-lg-4 pt-md-3 pt-sm-3 pt-3">
			<h2 class="sellerInfo_title">@Localizer["Seller info"]</h2><hr />
			<div class="row">
			<div class="col-lg-5 col-md-3 col-sm-4 col-4">
				<div class="container_avatar">
					<img src="@Model.UserProfile.UserAvatar.Path" alt="avatar" class="rounded-circle img-fluid avatar_img"/>
				</div>
			</div>
			<div class="col-lg-7 col-md-9 col-sm-8 col-8">
				<div class="pt-4">
					<h2 class="sellerInfo_title">@Model.UserProfile.Name</h2>
					<h2 class="sellerInfo_title">@Model.UserProfile.Surname</h2>
				</div>
			</div>
			</div>
			<div class="row">
				@if (Model.UserProfile.PhoneNumber != null)
				{
					<div class="phone_block">
						@Model.UserProfile.PhoneNumber.Substring(0,3) (@Model.UserProfile.PhoneNumber.Substring(3, 3))
						<span class="num_hide">@Model.UserProfile.PhoneNumber.Substring(6,3)-@Model.UserProfile.PhoneNumber.Substring(9,2)-@Model.UserProfile.PhoneNumber.Substring(11,2)</span>
						<span class="sh_nmr"> @Localizer["show"]</span>

					</div>
				}
			</div>
		</div>
	</div>
	<div class="row pt-3">
		<div class="col-lg-8 col-md-12 blue_block p-4">
			<h3 class="adress_title">@Model.HouseAdvert.MainInfo.Region, @Model.HouseAdvert.MainInfo.City, @Model.HouseAdvert.MainInfo.Street, @Model.HouseAdvert.MainInfo.HouseNumber</h3>
			<hr />
			<p class="param_block_advert">
				<img src="~/images/icons/money.png" class="mb-2" width="20" height="20" />
				<b>@Model.HouseAdvert.TotalPrice @Localizer[Model.HouseAdvert.Currency.ToString()]</b>
				@Localizer["price"] @Localizer["per object"]
				(@Model.HouseAdvert.PricePerSquareMeter @Localizer[Model.HouseAdvert.Currency.ToString()] @Localizer["per"] м<sup>2</sup>)
			</p>
			<p>
				<img src="~/images/icons/done.png" class="mb-2" width="20" height="20" />
				<b>@Localizer["Type of realty"]:</b> @Localizer[Model.HouseAdvert.Type.ToString()]
			</p>
			<p>
				<img src="~/images/icons/done.png" class="mb-2" width="20" height="20" />
				<b>@Localizer["rooms"]:</b> @Model.HouseAdvert.Rooms
			</p>
			<p>
				<img src="~/images/icons/done.png" class="mb-2" width="20" height="20" />
				<b>@Localizer["type of walls"]:</b> @Localizer[Model.HouseAdvert.TypeOfWalls.ToString()]
			</p>
			<p>
				<img src="~/images/icons/done.png" class="mb-2" width="20" height="20" />
				<b>@Localizer["total area"]:</b> @Model.HouseAdvert.TotalArea
			</p>
			<p>
				<img src="~/images/icons/done.png" class="mb-2" width="20" height="20" />
				<b>@Localizer["living area"]:</b> @Model.HouseAdvert.LivingArea
			</p>
			<p>
				<img src="~/images/icons/done.png" class="mb-2" width="20" height="20" />
				<b>@Localizer["land area"]:</b> @Model.HouseAdvert.LandArea
			</p>
			<p>
				<img src="~/images/icons/done.png" class="mb-2" width="20" height="20" />
				<b>@Localizer["floor"]:</b>  @Model.HouseAdvert.TotalCountFloors
			</p>
			<p>
				<img src="~/images/icons/done.png" class="mb-2" width="20" height="20" />
				<b>@Localizer["heating"]:</b> @Localizer[Model.HouseAdvert.Heating.ToString()]
			</p>
			<p>
				<img src="~/images/icons/done.png" class="mb-2" width="20" height="20" />
				<b>@Localizer["year built"]:</b> @Model.HouseAdvert.YearBuilt
			</p><hr />
			<p>
				<img src="~/images/icons/description.png" class="mb-2" width="20" height="20" />
				<b>@Localizer["description"]:</b> @Html.Raw(Model.HouseAdvert.Description)
			</p>
			<hr />
			<p>@Localizer["date of creating advert"]: @Model.HouseAdvert.CreationDate.ToString("yyyy-MM-dd")</p>
		</div>
	</div>
</div>	
 <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
 <script src="~/js/HidePhoneScript.js"></script>
}
