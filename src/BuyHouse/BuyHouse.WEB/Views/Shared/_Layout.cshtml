@using Microsoft.AspNetCore.Mvc.Localization
 
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - BuyHouse.WEB</title>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/5.2.0/zephyr/bootstrap.min.css" integrity="sha512-4hshmZC4nWxAKC1H3MJBd2uRv+gRBkcBODzZoj3Jzd0XrF+osekpAAI1W7ASmMTuSKzrq+3xDoTfNU2sbNK67w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link href="https://fonts.googleapis.com/css?family=Kaushan+Script|Montserrat:400,700&amp;subset=cyrillic-ext" rel="stylesheet">
	<link rel="stylesheet" href="~/css/Layout.css" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-lg menu">
			<div class="container-fluid">
				<a class="navbar-brand title" href="#"><img class="pb-1" src="~/images/icons/logo.png" width="48" height="48" />BuyHouse</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav me-auto">
						<li class="nav-item">
							<a class="nav-link link" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle link" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">@Localizer["Buy"]</a>
							<div class="dropdown-menu menu">
								<a class="dropdown-item link dropdown_link" asp-action="Index" asp-controller="FlatAdvert">@Localizer["Apartments"]</a>
								<a class="dropdown-item link dropdown_link" asp-action="Index" asp-controller="HouseAdvert">@Localizer["Houses"]</a>
								<a class="dropdown-item link dropdown_link" href="#">@Localizer["Rooms"]</a>
							</div>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle link" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">@Localizer["Sell"]</a>
							<div class="dropdown-menu menu">
								<a class="dropdown-item link dropdown_link" asp-action="CreateAdvert" asp-controller="FlatAdvert">@Localizer["Apartments"]</a>
								<a class="dropdown-item link dropdown_link" asp-action="CreateAdvert" asp-controller="HouseAdvert">@Localizer["Houses"]</a>
								<a class="dropdown-item link dropdown_link" href="#">@Localizer["Rooms"]</a>
							</div>
						</li>
					</ul>
					@if (!User.Identity.IsAuthenticated)
					{
						<ul class="navbar-nav">
							<li class="nav-item">
								<a class="nav-link link" asp-controller="Account" asp-action="Register">@Localizer["Sign up"]</a>
							</li>
							<li class="nav-item">
								<a class="nav-link link" asp-controller="Account" asp-action="Login">@Localizer["Log in"]</a>
							</li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link link" asp-action="Index" asp-controller="UserProfile">@Localizer["Office"]</a>
							</li>
						<form class="nav-item" asp-action="Logout" asp-controller="Account">
							<ul class="navbar-nav">
								<li class="nav-item">
									<button type="submit" asp-action="Logout" asp-controller="Account" class="btn logout_btn">@Localizer["Log out"]</button>
								</li>
							</ul>
						</form>
						</ul>
					}
					@await Html.PartialAsync("_SelectLanguagePartial")			
				</div>
			</div>
		</nav>
	</header>

	<main role="main">
		@RenderBody()
	</main>
	<footer class="border-top footer text-muted"style="background-color: black; ">
		<div class="container">
			&copy; 2022 - BuyHouse.WEB - Vladislav Petrov
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>