@model BuyHouse.WEB.Models.AdvertModel.FlatAdvertModel
@using BuyHouse.DAL.Entities.HelperEnum
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Search</title>
	<link rel="stylesheet" href="~/css/CreateFlatAdvert.css" />
</head>
<body>
<div class="container">
	<h1>@Localizer["Create your advert"]: </h1>
	<div class="col-md-6">
		<form method="post" asp-action="CreateAdvertPost" asp-controller="FlatAdvert" enctype="multipart/form-data">
			<hr />
			<h2>@Localizer["MainInfo"]</h2>
			@Html.LabelFor(m => m.MainInfo.Region)
			@Html.TextBoxFor(m => m.MainInfo.Region, new { @class = "form-control", required="true"})
			@Html.ValidationMessageFor(m => m.MainInfo.Region)<br />

			@Html.LabelFor(m => m.MainInfo.City)
			@Html.TextBoxFor(m => m.MainInfo.City, new { @class = "form-control", @required="true"  })
			@Html.ValidationMessageFor(m => m.MainInfo.City)<br />

			@Html.LabelFor(m => m.MainInfo.Street)
			@Html.TextBoxFor(m => m.MainInfo.Street, new { @class = "form-control", @required="true"  })
			@Html.ValidationMessageFor(m => m.MainInfo.Street)<br />

			@Html.LabelFor(m => m.MainInfo.HouseNumber)
			@Html.TextBoxFor(m => m.MainInfo.HouseNumber, new { @class = "form-control", @required="true"  })
			@Html.ValidationMessageFor(m => m.MainInfo.HouseNumber)<br />

			@Html.LabelFor(m => m.MainInfo.FlatNumber)
			@Html.TextBoxFor(m => m.MainInfo.FlatNumber, new { @class = "form-control", @type="number", @required="true"  })
			@Html.ValidationMessageFor(m => m.MainInfo.FlatNumber)<br />

			@Html.LabelFor(m => m.MainInfo.RegistrationDate)
			@Html.TextBoxFor(m => m.MainInfo.RegistrationDate, new { @class = "form-control", @type="date", @required="true"  })
			@Html.ValidationMessageFor(m => m.MainInfo.RegistrationDate)<br />
			<hr />

			<h2>@Localizer["Parameters"]</h2>
			@Html.LabelFor(m => m.Description)
			@Html.TextAreaFor(m => m.Description, new { @class = "form-control", @required="true"  })
			@Html.ValidationMessageFor(m => m.Description)<br />

			@Html.LabelFor(m => m.Type)<br />
			@Html.RadioButtonFor(m => m.Type, TypeOfRealty.Primary , new{ @required="true"})
			<lable>@Localizer["Primary"]</lable><br />
			@Html.RadioButtonFor(m => m.Type, TypeOfRealty.Secondary , new{ @required="true"})
			<lable>@Localizer["Secondary"]</lable><br />
			@Html.ValidationMessageFor(m => m.Type)<br />

			@Html.LabelFor(m => m.Rooms)
			@Html.TextBoxFor(m => m.Rooms, new { @class = "form-control", @type="number",  @required="true" })
			@Html.ValidationMessageFor(m => m.Rooms)<br />

			@Html.LabelFor(m => m.TypeOfWalls)
			<select class="form-control" name="TypeOfWalls" required>
				<option value="@TypeOfWalls.Brick">@Localizer["Brick"]</option>
				<option value="@TypeOfWalls.Frame">@Localizer["Frame"]</option>
				<option value="@TypeOfWalls.Panel">@Localizer["Panel"]</option>
				<option value="@TypeOfWalls.FoamBlock">@Localizer["FoamBlock"]</option>
				<option value="@TypeOfWalls.Ferroconcrete">@Localizer["Ferroconcrete"]</option>
				<option value="@TypeOfWalls.AeratedСoncrete">@Localizer["AeratedСoncrete"]</option>
				<option value="@TypeOfWalls.BlockBrick">@Localizer["BlockBrick"]</option>
				<option value="@TypeOfWalls.Monolith">@Localizer["Monolith"]</option>
			</select>
			@Html.ValidationMessageFor(m => m.TypeOfWalls)<br />

			@Html.LabelFor(m => m.TotalArea)
			@Html.TextBoxFor(m => m.TotalArea, new { @class = "form-control", @required="true" })
			@Html.ValidationMessageFor(m => m.TotalArea)<br />

			@Html.LabelFor(m => m.LivingArea)
			@Html.TextBoxFor(m => m.LivingArea, new { @class = "form-control", @required="true" })
			@Html.ValidationMessageFor(m => m.LivingArea)<br />

			@Html.LabelFor(m => m.Floor)
			@Html.TextBoxFor(m => m.Floor, new { @class = "form-control", @type="number", @required="true" })
			@Html.ValidationMessageFor(m => m.Floor)<br />

			@Html.LabelFor(m => m.Heating)<br />
			@Html.RadioButtonFor(m => m.Heating,@TypeOfHeating.Centralized, new{ @required="true"})
			<lable>@Localizer["Centralized"]</lable><br />
			@Html.RadioButtonFor(m => m.Heating,@TypeOfHeating.Individual, new{ @required="true"})
			<lable>@Localizer["Individual"]</lable><br />
			@Html.RadioButtonFor(m => m.Heating,@TypeOfHeating.Сombined, new{ @required="true"})
			<lable>@Localizer["Сombined"]</lable><br />
			@Html.RadioButtonFor(m => m.Heating,@TypeOfHeating.WithoutHeating, new{ @required="true"})
			<lable>@Localizer["WithoutHeating"]</lable><br />
			@Html.ValidationMessageFor(m => m.Heating)<br />

			@Html.LabelFor(m => m.YearBuilt)
			@Html.TextBoxFor(m => m.YearBuilt, new { @class = "form-control", @type="number", @step="1", @required="true" })
			@Html.ValidationMessageFor(m => m.YearBuilt)<br />

			@Html.LabelFor(m => m.RegistrationNumber)
			@Html.TextBoxFor(m => m.RegistrationNumber, new { @class = "form-control", @required="true"})
			@Html.ValidationMessageFor(m => m.RegistrationNumber)<br />

			<div class="row">
				<div class="col-md-10">
					@Html.LabelFor(m => m.TotalPrice)
					@Html.TextBoxFor(m => m.TotalPrice, new { @class = "form-control", @type="number", required="true" })
					@Html.ValidationMessageFor(m => m.TotalPrice)<br />
				</div>
				<div class="col-md-2 mt-4">
					<lable>Валюта</lable>
					<select class="form-control" name="Currency" required>
						<option value="@Currency.USD">USD</option>
						<option value="@Currency.Euro">Euro</option>
						<option value="@Currency.UAH">UAH</option>
					</select>
					@Html.ValidationMessageFor(m => m.Currency)<br />
				</div>
			</div>

			@Html.LabelFor(m => m.TypePrice)<br />
			@Html.RadioButtonFor(m => m.TypePrice, TypeOfPrice.PerSquareMeter , new{ @required="true"})
			<lable>@Localizer["PricePerSquareMeter"]</lable><br />
			@Html.RadioButtonFor(m => m.TypePrice, TypeOfPrice.TotalPrice , new{ @required="true"})
			<lable>@Localizer["PricePerObject"]</lable><br />
			@Html.ValidationMessageFor(m => m.TypePrice)<br />

			<hr />
			<h2>@Localizer["Photo"]</h2>
			<p>@Localizer["Upload photos message"]</p>
			<input type="file" multiple name="uploads" required /><br>
			@Html.ValidationMessageFor(m => m.Photos)<br />

			<button type="submit" class="btn btn-primary mt-3">@Localizer["Create advert"]</button>
		</form>
	</div>
</div>
</body>
</html>