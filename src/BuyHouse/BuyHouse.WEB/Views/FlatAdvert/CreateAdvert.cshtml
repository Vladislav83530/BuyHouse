@model BuyHouse.WEB.Models.AdvertModel.FlatAdvertModel
@using BuyHouse.DAL.Entities.HelperEnum
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Search</title>
	<link rel="stylesheet" href="~/css/CreateFlatAdvert.css" />
</head>
<body>
<div class="container">
	<h1>Створіть своє оголошення: </h1>
	<div class="col-md-6">
		<form method="post" asp-action="CreateAdvertPost" asp-controller="FlatAdvert" enctype="multipart/form-data">
			<hr />
			<h2>Основна інформація</h2>
			@Html.LabelFor(m => m.MainInfo.Region)
			@Html.TextBoxFor(m => m.MainInfo.Region, new { @class = "form-control", @required="true" })
			@Html.ValidationMessageFor(m => m.MainInfo.Region, "")

			@Html.LabelFor(m => m.MainInfo.City)
			@Html.TextBoxFor(m => m.MainInfo.City, new { @class = "form-control", @required="true"  })
			@Html.ValidationMessageFor(m => m.MainInfo.City)

			@Html.LabelFor(m => m.MainInfo.Street)
			@Html.TextBoxFor(m => m.MainInfo.Street, new { @class = "form-control", @required="true"  })
			@Html.ValidationMessageFor(m => m.MainInfo.Street)

			@Html.LabelFor(m => m.MainInfo.HouseNumber)
			@Html.TextBoxFor(m => m.MainInfo.HouseNumber, new { @class = "form-control", @required="true"  })
			@Html.ValidationMessageFor(m => m.MainInfo.HouseNumber)

			@Html.LabelFor(m => m.MainInfo.FlatNumber)
			@Html.TextBoxFor(m => m.MainInfo.FlatNumber, new { @class = "form-control", @type="number", @required="true"  })
			@Html.ValidationMessageFor(m => m.MainInfo.FlatNumber)

			@Html.LabelFor(m => m.MainInfo.RegistrationDate)
			@Html.TextBoxFor(m => m.MainInfo.RegistrationDate, new { @class = "form-control", @type="date", @required="true"  })
			@Html.ValidationMessageFor(m => m.MainInfo.RegistrationDate)
			<hr />

			<h2>Параметри</h2>
			@Html.LabelFor(m => m.Description)
			@Html.TextAreaFor(m => m.Description, new { @class = "form-control", @required="true"  })
			@Html.ValidationMessageFor(m => m.Description)

			@Html.LabelFor(m => m.Type)<br />
			@Html.RadioButtonFor(m => m.Type, TypeOfRealty.Primary , new{ @required="true"})
			<lable>Первинне житло</lable><br />
			@Html.RadioButtonFor(m => m.Type, TypeOfRealty.Secondary , new{ @required="true"})
			<lable>Вторинне житло</lable><br />
			@Html.ValidationMessageFor(m => m.Type)

			@Html.LabelFor(m => m.Rooms)
			@Html.TextBoxFor(m => m.Rooms, new { @class = "form-control", @type="number",  @required="true" })
			@Html.ValidationMessageFor(m => m.Rooms)

			@Html.LabelFor(m => m.TypeOfWalls)
			<select class="form-control" name="TypeOfWalls" required>
				<option value="@TypeOfWalls.Brick">Цегла</option>
				<option value="@TypeOfWalls.Frame">Каркасний</option>
				<option value="@TypeOfWalls.Panel">Панель</option>
			</select>
			@Html.ValidationMessageFor(m => m.TypeOfWalls)

			@Html.LabelFor(m => m.TotalArea)
			@Html.TextBoxFor(m => m.TotalArea, new { @class = "form-control", @required="true" })
			@Html.ValidationMessageFor(m => m.TotalArea)

			@Html.LabelFor(m => m.LivingArea)
			@Html.TextBoxFor(m => m.LivingArea, new { @class = "form-control", @required="true" })
			@Html.ValidationMessageFor(m => m.LivingArea)

			@Html.LabelFor(m => m.Floor)
			@Html.TextBoxFor(m => m.Floor, new { @class = "form-control", @type="number", @required="true" })
			@Html.ValidationMessageFor(m => m.Floor)

			@Html.LabelFor(m => m.Heating)<br />
			@Html.RadioButtonFor(m => m.Heating,"Централізоване", new{ @required="true"})
			<lable>Централізоване</lable><br />
			@Html.RadioButtonFor(m => m.Heating,"Індивідуальне", new{ @required="true"})
			<lable>Індивідуальне</lable><br />
			@Html.RadioButtonFor(m => m.Heating,"Комбіноване", new{ @required="true"})
			<lable>Комбіноване</lable><br />
			@Html.RadioButtonFor(m => m.Heating,"Без опалення", new{ @required="true"})
			<lable>Без опалення</lable><br />
			@Html.ValidationMessageFor(m => m.Heating)

			@Html.LabelFor(m => m.YearBuilt)
			@Html.TextBoxFor(m => m.YearBuilt, new { @class = "form-control", @type="number", @min="1970", @max="2026", @step="1", @required="true" })
			@Html.ValidationMessageFor(m => m.YearBuilt)

			@Html.LabelFor(m => m.RegistrationNumber)
			@Html.TextBoxFor(m => m.RegistrationNumber, new { @class = "form-control", @required="true"})
			@Html.ValidationMessageFor(m => m.RegistrationNumber)

			<div class="row">
				<div class="col-md-10">
					@Html.LabelFor(m => m.TotalPrice)
					@Html.TextBoxFor(m => m.TotalPrice, new { @class = "form-control", @type="number", required="true" })
					@Html.ValidationMessageFor(m => m.TotalPrice)
				</div>
				<div class="col-md-2 mt-4">
					<lable>Валюта</lable>
					<select class="form-control" name="Currency" required>
						<option value="@Currency.USD">USD</option>
						<option value="@Currency.Euro">Euro</option>
						<option value="@Currency.UAH">UAH</option>
					</select>
					@Html.ValidationMessageFor(m => m.Currency)
				</div>
			</div>

			@Html.LabelFor(m => m.TypePrice)<br />
			@Html.RadioButtonFor(m => m.TypePrice, TypeOfPrice.PerSquareMeter , new{ @required="true"})
			<lable>За кв. метр</lable><br />
			@Html.RadioButtonFor(m => m.TypePrice, TypeOfPrice.TotalPrice , new{ @required="true"})
			<lable>За об'єкт</lable><br />
			@Html.ValidationMessageFor(m => m.TypePrice)

			<hr />
			<h2>Фото</h2>
			<p>Завантажте декілька фотографій щоб отримати більше переглядів оголошення</p>
			<input type="file" multiple name="uploads" required /><br>
			@Html.ValidationMessageFor(m => m.Photos)

			<button type="submit" class="btn btn-primary mt-3">Створити оголошення</button>
		</form>
	</div>
</div>
</body>
</html>