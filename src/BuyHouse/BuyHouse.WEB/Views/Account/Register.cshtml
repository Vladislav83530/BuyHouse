@model BuyHouse.WEB.Models.ViewModels.Auth.RegisterViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div class="container main_container">
	<h2>@Localizer["Sign up"]</h2>
	<div class="row">
		<div class="col-lg-6">
			<form method="post" asp-controller="Account" asp-action="Register">
				<div asp-validation-summary="ModelOnly"></div>
				<div>
					<label>@Localizer["UserName"]</label><br />
					<input class="form-control mb-1" asp-for="Name" required/>
					<span asp-validation-for="Name"></span>
				</div>
				<div>
					<label>@Localizer["UserSurname"]</label><br />
					<input class="form-control mb-1" asp-for="Surname" required/>
					<span asp-validation-for="Surname"></span>
				</div>
				<div>
					<label>@Localizer["Email"]</label><br />
					<input class="form-control mb-1" asp-for="Email" required/>
					<span asp-validation-for="Email"></span>
				</div>
				<div>
					<label>@Localizer["PhoneNumber"]</label><br />
					<input class="form-control mb-1" asp-for="PhoneNumber" required/>
					<span asp-validation-for="PhoneNumber"></span>
				</div>
				<div>
					<label>@Localizer["Password"]</label><br />
					<input class="form-control mb-1" asp-for="Password" required/>
					<span asp-validation-for="Password"></span>
				</div>
				<div>
					<label>@Localizer["Confirm password"]</label><br />
					<input class="form-control mb-1" asp-for="PasswordConfirm" required/>
					<span asp-validation-for="PasswordConfirm"></span>
				</div>
				<div>
					<input type="submit" class="btn btn-primary btn_sigup" value=@Localizer["Sign up"] />
				</div>
			</form>

			@if(Model.ExternalProviders!=null){
			<form class="mt-2" asp-action="ExternalLogin" asp-controller="Account" asp-route-returnUrl="@Model.ReturnUrl" method="post">
				@foreach (var provider in Model.ExternalProviders)
				{
					<button class="btn btn-primary" name="provider" value="@provider.Name" type="submit">@provider.Name</button>
				}		
			</form>
			}
		</div>
	</div>
</div>